//Root 
html, body {
    overflow-x: hidden;
    background-color: #f8f8f8;
}
body {
    margin: 0px;
    font-family: Verdana, Geneva, sans-serif;
}

.quadWrap {
    margin: 0 auto;
    line-height: 14px!important;
    // border: 1px solid blue;
    background: #fff;
    @at-root #{&}__container{
        position: relative;
    }
}
.quad {
    width: 100%;
    position: absolute;
    top: 0px;
    height: 50px;
    box-shadow: 0px 0px 15px #ccc;
    
    img {
        padding:10px;
        height: 30px;
    }
}
